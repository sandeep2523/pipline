pipeline {
    agent any
    stages {
        stage {
        when {
            branch 'master'
            stage('ALL') {
                parallel {
                    stage('BUILD') {
                        steps {
                           echo "this is build stage"
                        }
                       
                    }
                    stage('DEPLOY') {
                        steps { 
                          echo "this is deploy stage"
                        }
                    }
                }
                
            }
       
       }
       }
    }
}
