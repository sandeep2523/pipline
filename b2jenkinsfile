pipeline {
    agent any
    stages {
            stage('ALL') {
                parallel {
                    when {
                         branch 'master'
                    stage('BUILD') {
                        steps {
                           echo "this is build stage"
                        }
                       
                    }
                    stage('DEPLOY') {
                        steps { 
                          echo "this is deploy stage"
                        }
                    }
                }
                
            }
        }
    }
}
