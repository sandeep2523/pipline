 pipeline {
    agent none
    stages {
        stage('BUILD') {
            agent { label 'slave1' }
            steps {
            sh'''
            sleep 5
            echo "hi"
            echo "hello"
            '''        
            }
        }
        stage('DEPLOY') {
            agent { label 'slave2' }
            steps {
                sh'''
                sleep 10
                echo "new"
                echo "new1"
                '''
            }
        }
        stage('TEST') {
            agent { label 'slave2' }
            steps {
                sh'''
                echo "helloo"
                echo "hiiiii"
                echo "heyyy"
                '''
            }
        }
    }
}
