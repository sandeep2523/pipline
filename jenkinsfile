 pipeline {
    agent none
    stages {
     agent { label 'master' }
      stage ('BUILD') {
            steps {
                sh 'echo "this is build stage"'
            }
        }
        stage ('DEPLOY') {
           agent { label 'slave1' }
            steps {
                sh 'echo "this is deploy stage"'
            }
        }
        stage ('TESTING') {
          agent { label 'slave2' }
            steps {
                sh 'echo "this is testing stage"'
            }
    }
}

