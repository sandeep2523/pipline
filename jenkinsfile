 pipeline {
    agent none
    stages {
    parallel {
        stage('BUILD') {
       agent { label 'master' }
            steps {
                sh 'echo "this is build stage"'
            }
        }
         stage('DEPLOY1') {
           agent { label 'slave1' }
            steps {
                sh 'echo "this is deploy stage"'
            }
         }
        stage('TESTING') {
          agent { label 'slave2' }
            steps {
                sh 'echo "this is testing stage"'
          }
          }
    }
  }
}
