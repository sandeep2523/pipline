 pipeline {
    agent none
    environment {
        BRANCH = "main"
           GITREPO = "https://github.com/sandeep2523/c-project-demo"
    }
        stages {
            stage('BOSS') {
            parallel {
            stage('BUILD') {
            agent { label 'slave1' }
            environment {
            NEW_ONE = "this script is declarative"
            steps {
             echo "$BRANCH"
            echo "$GITREPO"
             sh '''
             #!/bin/bash
             pwd
             ls
             echo "this id building of new pipeline script"
             echo "$NEW_ONE" 
             '''
             }
             }
            }
            stage('NEW-DEPLOY') {
                agent { label 'slave2' }
                steps {
                 echo "$BRANCH"
                 echo "$GITREPO"
                sh '''
                #!/bin/bash
                ls
                echo "this is script"
                '''
                }
            }
                }
            }
        }
}
