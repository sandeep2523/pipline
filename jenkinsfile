 pipeline {
    agent any
    stages {
        stage('BUILD') {
            agent { label 'slave1' }
            steps {
                catchError(buildResult: 'SUCCESS' , stageResult: 'FAILURE' ) {
                    sh'''
                    #!/bin/bash
                    pwd
                    ls
                    echo "this is for catcherror"
                    exit 1
                    '''
                }
            }
        }
        stage('DEPLOY') {
            agent { label 'slave2' }
            steps {
                echo "hello"
            }
        }

        
    }
}
