 pipeline {
    agent none
    stages {
    stage('all') {
    parallel {
        stage('BUILD') {
       agent { label 'master' }
            steps {
                git branch: 'main', url: 'https://github.com/sandeep2523/c-project-demo.git'
            }
        }
         stage('DEPLOY1') {
           agent { label 'slave1' }
            steps {
                sh 'echo "this is deploy stage"'
            }
         }
        stage('TESTING') {
          agent { label 'slave2' }
            steps {
                sh 'echo "this is testing stage"'
          }
          }
  }
  }
  }
}
