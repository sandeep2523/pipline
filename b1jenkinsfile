pipeline {
    agent any
    parameters {
    choice(choices: ['master', 'main'], description: 'Please select the required branch', name: 'BRANCH')
    }
    stages {
        stage ('BUILD') {
            when {
                BRANCH 'master'
            }
            steps {
                echo "this is build stage"   
            }
        }
        stage ('DEPLOY') {
            when {
                BRANCH 'master'
            }
            steps {
                sh'''
                echo "this is deploy stage"
                '''
            }
        }
       
    }  
    
}
